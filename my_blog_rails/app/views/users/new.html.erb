<h1>Create new User</h1>
<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :firstname %>
    <%= f.text_field :first_name %> 
  </p>
 
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
 	<p>
 		<%= f.label :description %>
    <%= f.text_area :description %>
 	</p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', :action => nil %>