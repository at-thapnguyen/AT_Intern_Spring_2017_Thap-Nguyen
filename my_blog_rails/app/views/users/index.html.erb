<h1>List Users</h1>

<table>
  <tr>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.first_name, :action => 'show', :id => user.id %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => user.id %></td>
    <td><%= link_to 'Destroy', user, data: {confirm: 'Are you sure?'}, method: :delete %></td>
  </tr>
<% end %>
</table>

